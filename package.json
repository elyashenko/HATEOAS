{
  "name": "hateoas-blog",
  "version": "1.0.0",
  "description": "HATEOAS блог - фронтенд и бэкенд",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:server": "npm run build:server && node --watch dist-server/main.js",
    "build": "npm run build:server && npm run build:client",
    "build:client": "tsc && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "npm run dev",
    "start:prod": "node dist-server/main.js",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:server": "eslint \"server/**/*.ts\" --fix",
    "format": "prettier --write \"server/**/*.ts\" \"src/**/*.{ts,tsx}\"",
    "kill-ports": "./kill-ports.sh",
    "release": "commit-and-tag-version",
    "release:minor": "commit-and-tag-version --release-as minor",
    "release:major": "commit-and-tag-version --release-as major",
    "release:patch": "commit-and-tag-version --release-as patch",
    "release:prerelease": "commit-and-tag-version --prerelease"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@reduxjs/toolkit": "^2.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "fastify": "^4.24.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.20.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vercel/node": "^5.5.28",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "commit-and-tag-version": "^12.6.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "path-to-regexp": "^6.3.0",
    "undici": "^6.22.1"
  }
}
